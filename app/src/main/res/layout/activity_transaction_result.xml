<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌 번호"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/transres_accnum_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="account_number"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래 금액"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/transres_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￦amount"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수수료"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/transres_fee_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￦fee"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래 후 잔고"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/trans_balanceResult_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￦balance_result"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <Button
                android:id="@+id/transres_home_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_button"
                android:background="@color/colorPrimary"
                android:textColor="@color/black"
                android:text="홈으로"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>