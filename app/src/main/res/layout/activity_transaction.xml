<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 번호"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/trans_accnum_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="account_number"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잔고"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/trans_balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￦balance"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginBottom="15dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/trans_objacc_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/trans_objacc_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="송금 계좌"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <EditText
                android:id="@+id/trans_amount_input"
                android:hint="거래금액"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래 후 잔고"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/trans_balanceResult_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￦balance_result"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginBottom="15dp"/>
        <Button
            android:id="@+id/trans_action_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button"
            android:background="@color/colorPrimary"
            android:text="TransType"/>
        </LinearLayout>a
    </ScrollView>

</LinearLayout>